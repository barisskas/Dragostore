<main>
  <!-- Swiper -->
  <div class=" home-slide  mySwiperHomePage">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <picture class="img-fluid">
          <source media="(max-width:400px )" srcset="/images/slide-1/1.jpg" />
          <source media="(max-width:768px )" srcset="/images/slide-1/2.jpg" />
          <source media="(max-width:1024px )" srcset="/images/slide-1/4.jpg" />
          <source media="(max-width:1536px )" srcset="/images/slide-1/5.jpg" />
          <source media="(max-width:3500px )" srcset="/images/slide-1/3.jpg" />

          <img src="images/2.webp" alt="" />
        </picture class="img-fluid">
      </div>
      <div class="swiper-slide">
        <picture>
          <source media="(max-width:400px )" srcset="/images/slide-2/1.jpg" />
          <source media="(max-width:768px )" srcset="/images/slide-2/2.jpg" />
          <source media="(max-width:1024px )" srcset="/images/slide-2/4.jpg" />
          <source media="(max-width:1536px )" srcset="/images/slide-2/5.jpg" />
          <source media="(max-width:3500px )" srcset="/images/slide-2/3.jpg" />

          <img src="images/2.webp" alt="" />
        </picture class="img-fluid">
      </div>
      <div class="swiper-slide">
        <picture>
          <source media="(max-width:400px )" srcset="/images/slide-3/1.jpg" />
          <source media="(max-width:768px )" srcset="/images/slide-3/2.jpg" />
          <source media="(max-width:1024px )" srcset="/images/slide-3/4.jpg" />
          <source media="(max-width:1536px )" srcset="/images/slide-3/5.jpg" />
          <source media="(max-width:3500px )" srcset="/images/slide-3/3.jpg" />

          <img src="images/2.webp" alt="" />
        </picture class="img-fluid">
      </div>
    </div>
    <div class="swiper-pagination"></div>
  </div>




 <div class="container mt-4 p-4">

  <h2 class="category-title my-3">Kategoriler</h2>
 
<div class="container lastitem my-3">
  <% categories.forEach((category)=> { %>
      
        <div class="category-block-out">
      <a
        class="category-block"
        href="/category/<%= category.queryName %>"
        ><input type="button" class="btn category-list-button" value="<%= category.name %>"></a
      >
         </div>
    <% }) %>
</div>
<div class="container mt-5">
  <h2 class="category-title my-3">Öne çıkan ürünler</h2>
  <div class="home  mySwiper-card">
    <div class="swiper-wrapper">
        <% lastProducts.forEach((product)=> { %>
          <div class="swiper-slide ">
          <a class="col-lg-10 card-cover " href="/product/<%= product.queryName %>">
            <div class="col-lg-12 product-col">
              <div class="card product-card adminincard highlight-item">
                <img
                  src="/images/product/<%= product?.brand?.category.queryName %>/<%= product.images[0].url%>"
                  class="card-img-top"
                  alt="..."
                />
                <div class="card-body">
                  <div class="card-title product-name"><%= product.name %></div>
                  <p class="card-text"><%= product.features %></p>
                  <div
                    class="card-title product-price shopping-basket filtersearch"
                  >
                    <%= product.price+" TL" %>
                  </div>
                </div>
                <div
                  class="card-header admincardheader bg-neonBlue product-select"
                >
                  <h6>seçiniz</h6>
                </div>
              </div>
            </div>
          </a>
        </div>
          <% }) %>
    </div>
   
  </div>
</div>
</div>
</main>
